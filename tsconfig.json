{
    "compilerOptions": {
        "noImplicitUseStrict": true,
        "outDir": "./compiled",
        "baseUrl": "./",
        "declaration": true,
        "target": "es5",
        "sourceMap": false,
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "compiled",
        "local_scripts",
        "submodules",
        "test",
        "tests",
        "@types",
        "modules"
    ]
}