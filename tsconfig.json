{
    "compilerOptions": {
        "noImplicitUseStrict": true,
        "outDir": "./compiled",
        "baseUrl": "./",
        "declaration": true,
        "target": "es5",
        "sourceMap": false,
        "module": "commonjs",
        "skipLibCheck": false,
        "paths": {
            "@craydent/craydent-*": [
                "compiled/transformedMajor/*"
            ],
            "@craydent/craydent.*": [
                "compiled/transformedMinor/craydent.*"
            ],
            "craydent-*": [
                "compiled/transformedMajor/*"
            ],
            "craydent.*": [
                "compiled/transformedMinor/craydent.*"
            ],
        },
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "compiled/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "local_scripts",
        "submodules",
        "test",
        "tests",
        "modules",
        "modules.bk"
    ]
}